<!-- Main Content -->
<div class="container">
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <% @blog_posts.each do |blog_post| %>
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">
                       <%= blog_post.title %>
                    </h2>
                    <h3 class="post-subtitle">
                        <%= blog_post.entry %>
                    </h3>
                </a>
                <p class="post-meta">Posted by <%= blog_post.user_id %> on <%= blog_post.created_at.strftime("%B %d, %Y") %></p>
            </div>
            <hr>
          <% end %>
            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>