<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :country %><br />
    <%= f.text_field :country, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :tel do %>Phone Number:<% end %><br />
    <%= f.text_field :tel, class: "form-control"  %>
  </div>

  <%= f.hidden_field :role, value: "guest" %>

  <div class="form-group">
    <%= f.label :locale do %>Language<% end %><br />
    <%= f.select(:locale, [["English", "en"],["Nederlands", "nl"]], { include_blank: "Select Language"}, class: "form-control input-lg", required: true) %>
  </div>

  <div class="form-group">
    <%= f.label :time_zone %><br />
    <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones.reverse, { include_blank: "Select Time Zone"}, required: true, class: "form-control input-lg") %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
