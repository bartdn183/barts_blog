<%= form_with(model: @comment, remote: true) do |form| %>

  <div class="form-group">
    <%= form.text_area :entry, rows: 3, class: "form-control input-lg" %>
  </div>

        <%= form.hidden_field :blog_post_id, value: @blog_post.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= form.submit class: "btn btn-default btn-block" %>
  </div>
<% end %>